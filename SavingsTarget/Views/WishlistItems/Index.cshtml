@model IEnumerable<SavingsTarget.Models.WishlistItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4>@Html.ActionLink("Add  To Wishlist", "Create")</h4>



<table id="Items"class="table">
    <thead>
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ValueFor(modelItem => item.Date, "{0:dd/MM/yyyy}")
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Value)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>

    <br/><br/>
<h4 align="center">Your Account Balance is<b> $@ViewBag.Balance</b></h4>
    <br />
    <h4 align="center">
        <progress class="progress progress-success" value=@ViewBag.Balance max=@ViewBag.TotalExpenses></progress>
    </h4>
   <br />
    <h4 align="center">
        You need to deposit <b>$@(ViewBag.TotalExpenses - ViewBag.Balance)</b> more to achieve your target!!!
        <br /><br />
        Click @Html.ActionLink("Here", "Deposit", "UserSavingsAccounts") to Deposit.
    </h4>
@section scripts
{
    <script>
        $(document)
            .ready(function() {
                $("#Items").DataTable();
            })
    </script>}